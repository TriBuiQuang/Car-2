@model Car.Models.CTDH

@{
    ViewBag.Title = "Chi tiết đơn hàng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



<div class="card-header">
    <h3 class="float-left" style="color:blue"><i class="fas fa-info"></i> Chi Tiết Đơn Hàng</h3>
</div>
<div class="card-body">
    <div class="table-responsive">
        @using (Html.BeginForm("ChitietDH", "Admin", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="col-md-12">
                <div class="form-group">
                    <div class="col-md-4 t">
                        <i class="fas fa-user-alt"></i>
                        Họ tên khách hàng :
                    </div>
                    <div class="col-md-8 ">
                        @ViewBag.TenKH.HoTen
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-4 float-left">
                        <i class="fas fa-cube"></i>
                        Sản phẩm :
                    </div>
                    <div class="col-md-8">
                        @foreach (var item in ViewBag.Sp)
                        {
                            @item.TenSP
                        }
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-4 ">
                        <i class="fas fa-sort-numeric-up"></i>
                        @Html.DisplayNameFor(model => model.SoLuong)
                    </div>
                    <div class="col-md-8">
                        @Html.DisplayFor(model => model.SoLuong)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-4 float-left">
                        <i class="fas fa-dollar-sign"></i>
                        @Html.DisplayNameFor(model => model.Dongia)
                    </div>
                    <div class="col-md-8 float-right">
                        @Html.DisplayFor(model => model.Dongia)
                    </div>
                </div>
            </div>
            <div class="form-group">

                    <a href="@Url.Action("DonHang","Admin")" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Trở lại</a>

            </div>
        }
    </div>
</div>