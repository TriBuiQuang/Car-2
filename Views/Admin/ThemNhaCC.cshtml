@model Car.Models.NhaCungCap
@{
    ViewBag.Title = "Thêm nhà cung cấp";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card-header">
    <h3 class="float-left" style="color:red"><i class="fas fa-plus"></i> Thêm Mới Nhà Cung cấp</h3>
</div>
<div class="card-body">
    <div class="table-responsive">

        @using (Html.BeginForm("ThemNhaCC", "Admin", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="col-md-12">
                <div class="form-group">
                    <div class="col-md-4 float-left">
                        <i class="fas fa-building"></i>
                        @Html.LabelFor(model => model.TenNCC, htmlAttributes: new { @class = "control-label" })
                    </div>
                    <div class="col-md-8 float-right">
                        @Html.EditorFor(model => model.TenNCC, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TenNCC, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-4 float-left">
                        <i class="fas fa-user"></i>
                        @Html.LabelFor(model => model.TenDaiDien, htmlAttributes: new { @class = "control-label" })
                    </div>
                    <div class="col-md-8 float-right">
                        @Html.EditorFor(model => model.TenDaiDien, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
                        @Html.ValidationMessageFor(model => model.TenDaiDien, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-4 float-left">
                        <i class="fas fa-map-marker-alt"></i>
                        @Html.LabelFor(model => model.DiaChi, htmlAttributes: new { @class = "control-label" })
                    </div>
                    <div class="col-md-8 float-right">
                        @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-4 float-left">
                        <i class="fas fa-phone"></i>
                        @Html.LabelFor(model => model.SoDTT, htmlAttributes: new { @class = "control-label" })
                    </div>
                    <div class="col-md-8 float-right">
                        @Html.EditorFor(model => model.SoDTT, new { htmlAttributes = new { @class = "form-control", @type = "email" } })
                        @Html.ValidationMessageFor(model => model.SoDTT, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class=" col-md-12 float-left">
                    <button type="submit" class="btn btn-red float-right"><i class="fas fa-plus"></i> Thêm mới</button>
                    <a href="@Url.Action("NhaCungCap","Admin")" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Trở lại</a>
                </div>
            </div>
        }
    </div>
</div>