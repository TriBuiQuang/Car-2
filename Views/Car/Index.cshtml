
@using PagedList.Mvc;
@using Car.Models
@model PagedList.PagedList<Xe>


@{
    ViewBag.Title = "DCG-Cars";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div class="row">
    <div class="container">
        <div class="spacer-single"></div>
        <!-- portfolio filter begin -->
        <div class="row">
            <div class="col-md-12 text-center">
                <ul id="filters" class="wow fadeInUp" data-wow-delay="0s">
                    <li><a href="#" data-filter="*" class="selected">All Projects</a></li>
                   
                    @foreach (var item in ViewBag.nhasan)
                    {
                        <li><a href="#" data-filter=".@item.MaNSX">@item.TenNSX</a></li>
                    }
                </ul>
            </div>
        </div>
        <!-- portfolio filter close -->
    </div>
   
    <div id="gallery" class="gallery full-gallery de-gallery pf_full_width wow fadeInUp" data-wow-delay=".3s">

        @foreach (var xe in Model)
        {<!-- gallery item -->

            <div class="item @xe.MaNSX desc">
                <div class="picframe" style="width:100%;height:300px">
                    <a href="~/Car/CarDetails/@xe.Maxe">
                        <span class="overlay">
                            <span class="pf_text">
                                <span class="project-name">@xe.Tenxe</span>
                            </span>
                        </span>
                    </a>
                    <img src="~/Hinhsanpham/@xe.Anh" alt="@xe.Tenxe" style="width:25%;height:200px" />
                </div>
            </div>

            <!-- close gallery item -->
        }
    </div>
    <div id="loader-area">
        <div class="project-load"></div>
    </div>

</div>
Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount
<div class="MenuTrang">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
</div>
<style>
    .MenuTrang li {
        display: inline;
    }
</style>
